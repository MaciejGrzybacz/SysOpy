CC = gcc
CFLAGS = -pthread

CLIENT_SOURCE = client.c
CLIENT_EXECUTABLE = client

SERVER_SOURCE = server.c
SERVER_EXECUTABLE = server

all: $(CLIENT_EXECUTABLE) $(SERVER_EXECUTABLE)

$(CLIENT_EXECUTABLE): $(CLIENT_SOURCE)
	$(CC) $(CFLAGS) -o $(CLIENT_EXECUTABLE) $(CLIENT_SOURCE)

$(SERVER_EXECUTABLE): $(SERVER_SOURCE)
	$(CC) $(CFLAGS) -o $(SERVER_EXECUTABLE) $(SERVER_SOURCE)

clean:
	rm -f $(CLIENT_EXECUTABLE) $(SERVER_EXECUTABLE)

# Usage:
# ./server 127.0.0.1 8080
# ./client ID 127.0.0.1 8080